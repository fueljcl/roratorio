{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "ES2020",
            "dom"
        ],
        "module": "es2020", // モジュール形式
        "moduleResolution": "bundler",
        "strict": true, // 厳格な型チェック
        "outDir": "../dist", // 出力先ディレクトリ(実際はwebpackが管理)
        "types": [],
        "baseUrl": ".",
        "paths": {}
    },
    "include": [
        "./src/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}
